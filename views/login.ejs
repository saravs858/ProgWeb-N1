<%- include('partials/header', {title: 'Login - Lumina Edu'}); %>

<main class="login-container">
  <div class="row g-0">
    <!-- Coluna da Ilustração -->
    <div class="col-lg-6 d-none d-lg-block">
      <div class="login-illustration">
        <img src="/images/login-illustration.jpeg" alt="Estudante acessando plataforma" class="w-100 h-100">
        <div class="illustration-overlay">
          <h2>Bem-vindo de volta!</h2>
          <p>Acesse sua conta para continuar sua jornada educacional</p>
        </div>
      </div>
    </div>

    <!-- Coluna do Formulário -->
    <div class="col-lg-6">
      <div class="login-form-container">
        <div class="text-center mb-5">
          <img src="/images/logo.png" alt="Lumina Edu" width="120" class="mb-3">
          <h1 class="h3 mb-3 fw-normal">Acesse sua conta</h1>
        </div>

        <form class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="email" placeholder="seu@email.com" required>
            <div class="invalid-feedback">
              Por favor, insira um e-mail válido.
            </div>
          </div>

          <div class="mb-4">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" id="password" required>
            <div class="invalid-feedback">
              Por favor, insira sua senha.
            </div>
          </div>

          <div class="d-flex justify-content-between mb-4">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="remember">
              <label class="form-check-label" for="remember">Lembrar-me</label>
            </div>
            <a href="/recuperar-senha" class="text-decoration-none">Esqueceu a senha?</a>
          </div>

          <button class="w-100 btn btn-lg btn-gold mb-3" type="submit">Entrar</button>
          
          <div class="text-center mt-4">
            <p class="mb-2">Não tem uma conta? <a href="/cadastro" class="text-decoration-none">Cadastre-se</a></p>
            <p>Ou entre com:</p>
            <div class="social-login">
              <button type="button" class="btn btn-outline-secondary me-2">
                <i class="fab fa-google"></i>
              </button>
              <button type="button" class="btn btn-outline-primary me-2">
                <i class="fab fa-facebook-f"></i>
              </button>
              <button type="button" class="btn btn-outline-dark">
                <i class="fab fa-apple"></i>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer'); %>

<!-- Adicione no final do body -->
<script>
// Validação do formulário
(() => {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>